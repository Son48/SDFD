<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/itemviewdiabete">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#FFC107">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="280dp"
            android:layout_height="190dp"
            android:id="@+id/dia_img"
            app:riv_corner_radius="14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/popularimg" />
        <TextView
            android:id="@+id/dia_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popular dish"
            android:textSize="19sp"
            android:textStyle="bold"
            android:fontFamily="@font/alice"/>
        <TextView
            android:id="@+id/dia_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="description"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dia_calo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/alice"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Calo: "/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu_favorite"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>